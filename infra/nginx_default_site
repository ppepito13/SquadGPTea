server {
        server_name polarny.it www.polarny.it;

        root /var/www/html;
        index index.html index.htm;

        # Pass requests for /parse/ to Parse Server instance at localhost:1337
        location / {
                # prevents 502 bad gateway error
                proxy_buffers 8 32k;
                proxy_buffer_size 64k;
                # redirect all HTTP traffic to localhost:8088;

                proxy_set_header X-Real-IP $remote_addr;
                proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
                proxy_set_header X-NginX-Proxy true;
                proxy_pass http://0.0.0.0:1337/;
                proxy_ssl_session_reuse off;
                proxy_set_header Host $http_host;
                proxy_redirect off;

                # enables WS support
                proxy_http_version 1.1;
                proxy_set_header Upgrade $http_upgrade;
                proxy_set_header Connection "upgrade";

                proxy_read_timeout 999999999;
        }
    client_max_body_size 100M;
    listen 443 ssl; # managed by Certbot

    #SSL certificates and configs generated by Certbot
    ssl_certificate /etc/letsencrypt/live/polarny.it/fullchain.pem; # managed by Certbot
    ssl_certificate_key /etc/letsencrypt/live/polarny.it/privkey.pem; # managed by Certbot
    include /etc/letsencrypt/options-ssl-nginx.conf; # managed by Certbot
    ssl_dhparam /etc/letsencrypt/ssl-dhparams.pem; # managed by Certbot

#    if ($host = www.polarny.it) {
#        return 301 https://$host$request_uri;
#    } # managed by Certbot
#
#
#    if ($host = polarny.it) {
#        return 301 https://$host$request_uri;
#    } # managed by Certbot
#
#
#	listen 80 default_server;
#	listen [::]:80 default_server;
#
##	server_name polarny.it www.polarny.it;
#    return 404; # managed by Certbot

}
